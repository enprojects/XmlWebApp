
@{
    ViewBag.Title = "Index";
}

<div ng-controller="mainController">

    <table class="table table-striped">
        <thead>
            <tr>
                <th data-column-name="Id" sort-by-column>StudentId</th>
                <th>Student name </th>
                <th>Student Last Name</th>
                 
            </tr>
        </thead>

        <tbody>
            <tr ng-repeat="student in students" >
                <td> {{student.Id}}</td>
                <td> {{student.Name}}</td>
                <td> {{student.LastName}}</td>
            </tr>
        </tbody>

    </table>
    
    <ul class="pagination"  >
        <li ng-repeat ="pagerItem in pagerItems" >
            <a href="#"  ng-click='goToPage(pagerItem)'>{{pagerItem}}</a>
        </li>
         
    </ul>
</div>

